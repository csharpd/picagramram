<% if @posts.any?%>
  <% @posts.in_groups_of(3,false) do |post_triplet| %>
<section class='row'>
  <%= render post_triplet %>
 </section>
    <% end %>
<%else%>
<h2>No posts yet</h2>
<%end%>

<%= link_to new_post_path, :class => 'btn btn-primary' do %>
  <span class='hidden-xs'>New Post</span> <span class="glyphicon glyphicon-pencil"></span>
<% end %>

